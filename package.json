{
  "name": "corvid-dev-experience",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "scripts": {
    "lint": "lerna exec \"yarn lint\"",
    "lint:fix": "lerna exec \"eslint --fix .\"",
    "test": "lerna exec \"yarn test\"",
    "precommit": "lerna exec \"yarn precommit\""
  },
  "devDependencies": {
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lerna": "3.13.1",
    "prettier": "1.12.0"
  },
  "husky": {
    "hooks": {
      "precommit": "lerna run precommit"
    }
  },
  "workspaces": {
    "packages": [
      "corvid-dir-as-json",
      "corvid-fake-local-mode-editor",
      "corvid-cli",
      "corvid-local-server",
      "corvid-local-site",
      "corvid-local-test-utils",
      "corvid-local-logger",
      "corvid-local-testkit",
      "init-corvid"
    ],
    "nohoist": [
      "**/eslint*"
    ]
  }
}
