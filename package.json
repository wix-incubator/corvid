{
  "name": "corvid-dev-experience",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "license": "MIT",
  "scripts": {
    "lint": "lerna exec --scope corvid-cli \"yarn lint\"",
    "lint:fix": "lerna exec --scope corvid-cli \"eslint --fix .\"",
    "test": "lerna exec --scope corvid-cli \"npx jest pull\"",
    "precommit": "lerna exec --scope corvid-cli \"yarn precommit\""
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.14.1",
    "prettier": "^1.17.1"
  },
  "husky": {
    "hooks": {
      "precommit": "lerna run precommit"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}